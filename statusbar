#!/bin/bash

while true; do
    usdtoars -a
    weather -a
    usdtoars="$(usdtoars --get-official)/$(usdtoars --get-blue)"
    date=$(date "+%d/%m/%y %H:%M")
    weather=$(weather -c)
    vol=$(pamixer --get-volume-human)
    xsetroot -name "ğŸ’¸ $usdtoars â›… $weather ğŸ”Š $vol ğŸ’¾ $(memusage)% ğŸ’» $(cpuusage)% â³ $date"
    sleep 1
done
